<%= form_with(model: @program, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :week_duration %>
    <%= f.select :week_duration, [['4 Weeks'], ['6 Weeks'], ['8 Weeks'], ['10 Weeks'], ['12 Weeks']] %>
  </div>
  <div class="field">
    <%= f.label :days_per_week %>
    <%= f.select :days_per_week, [['1 Day'],['2 Days'], ['3 Days'], ['4 Days'], ['5 days'], ['6 Days'], ['7 Days']] %>
  </div>
  <br/>
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>