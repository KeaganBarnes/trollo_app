<h2 class="ui grey inverted header">Log in</h2>


<div class="ui large form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"ui grey inverted header" %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"test@test.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"ui grey inverted header" %><br />
    <%= f.password_field :password, placeholder:"password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"ui grey inverted header" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"ui blue button inverted" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

